#include <stdio.h>

int main()
{
    int wiek=20;
    short int ilosc_szklanek1=8;
    long int ilosc_szklanek2=5;
    signed int pietro=-4;
    unsigned int pietro2=5;
    char punkt='e';
    signed char liczba=124;
    float temperatura_wody=38.6f;
    double wysokosc=1.5687;
    long double wysokosc2=2.1111;
    short punkty=6;
    signed short sid=-9;
    signed short int der=-7;
    unsigned short int das=1;
    signed die=-2;
    
    
    printf ("Zmienna int wiek ma rozmiar: %dB\n", sizeof(wiek));
    printf ("Zmienna short int ma rozmiar: %dB\n", sizeof(ilosc_szklanek1));
    printf ("Zmienna long int ma rozmiar: %dB\n", sizeof(ilosc_szklanek2));
    printf ("Zmienna signed int ma rozmiar: %dB\n", sizeof(pietro));
    printf ("Zmienna unsigned int ma rozmiar: %dB\n", sizeof(pietro2));
    printf ("Zmienna char ma rozmiar: %dB\n", sizeof(punkt));
    printf ("Zmienna signed char ma rozmiar: %dB\n", sizeof(liczba));
    printf ("Zmienna float ma rozmier: %dB\n", sizeof (temperatura_wody));
    printf ("Zmienna double ma rozmiar: %dB\n", sizeof (wysokosc)); 
    printf ("Zmienna long double ma rozmiar: %dB\n", sizeof(wysokosc2));
    printf ("Zmienna short ma rozmiar: %dB\n", sizeof(punkty));
    printf ("Zmienna signed short ma rozmiar: %dB\n", sizeof(sid));
    printf ("Zmienna signed short int ma rozmiar: %dB\n", sizeof(der));
    printf ("Zmienna unsigned short int ma rozmiar: %dB\n", sizeof(das));
    printf ("Zmienna signed ma rozmiar: %dB\n", sizeof(die));
    
    return 0;
}

