#include <stdio.h>
#define kelvin 273

int main()
{
    
  int temp;
  const float rankine = 9.0/5.0;
  float celcjusz = 0.0;
  printf ("Podaj temperature w stopniach F\n");
  scanf ("%d",&temp);
  celcjusz: 5.0/9.0*(temp- 32);
  printf("Temperatura to %.1f stopnia C\n",celcjusz);
  printf("I zarazem %.1f K\n", celcjusz+kelvin);
  printf("I zarazem %.1f R\n", (celcjusz+kelvin)*rankine);

  return 0;
}
