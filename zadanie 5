#include <stdio.h>

int main()
{
    int i,j,x,z;
    int licznik=0;
    printf("podaj liczbe warstw");
    scanf("%d", &x);
    for(i=x+2;i>0;j--)
    {
        for(j=i;j>=0;j--)
    {
    for(z=0;z<=i;z++)
    {
        printf("*");
    }
    printf("\n");
    }
    for (z=0;z<=i;z++)
    {
        printf("*");
        licznik=licznik+1;
    }
    printf("\n");
    }
    printf("liczba uzytych znakow to %d", licznik);
    
    return 0;
}
