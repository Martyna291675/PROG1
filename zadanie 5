#include <stdio.h>

int main()
{
    int i;
    int j;
    int licznik;
    int max=31;
    for(i=5;i>0;i--){
        for(j=i;j>0;j--){
            printf("* ",i);
    
        }
        printf("\n");
    }
     for(i=4;i>0;i--){
        for(j=i;j>0;j--){
            printf("* ",i);
    
        }
        printf("\n");
    }
     for(i=3;i>0;i--){
        for(j=i;j>0;j--){
            printf("* ",i);
    
        }
        printf("\n");
    }
          for(licznik=0;licznik<max;licznik++){
             printf("%d ",licznik+1);
             
             }  

    return 0;
}
